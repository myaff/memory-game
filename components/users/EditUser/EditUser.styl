.add-user {
  fixed(0px, 0px);
  z-index: 9;
  size(100%);
  background: rgba(#000, 0.2);
  flexy(center, center);

  &__window {
    width: 400px;
    max-width: 100%;
    background: #fff;
    box-shadow: 0 0 30px rgba(#000, 0.2);
    padding: 48px;
    border-radius: 8px;
  }

  &__avatar {
    font-size: 64px;
    circle(1.5em);
    overflow hidden;
    flexy(center, center);
    background: rgba($color--grey, 0.4);
    margin: 0 auto 24px;
  }

  &__avatar-icon {
    line-height 1;
  }

  &__avatar-update {
    absolute(0px, 0px);
    size(100%);
    flexy(center, center);
    background: rgba($color--black_light, 0.4);
    color: #fff;
    opacity: 0;
    transition: opacity 0.3s;
    cursor: pointer;
    font-size: 48px;

    &:hover {
      opacity: 1;
    }
  }

  &__form {
    text-align: center;
  }

  &__form-title {
    margin-bottom: 1em;
  }
  &__form-input {
    display: block;
    width: 100%;
    font: $font-size-base/1 $font-base;
    padding: 1em 1.5em;
    box-sizing: border-box;
    border-radius: 4px;
    background: rgba($color--grey_light, 0.5);
    border: 0;
    text-align center;
    box-shadow: inset 0 0 10px rgba(#000, 0.05);
  }
  &__form-btn {
    margin-top: 20px;

    &.btn--save {
      padding-left: 2.5em;
      padding-right: 2.5em;
    }
    &.btn--cancel {
      margin-left: 0.5em;
      background: $color--grey_light;
      color: $color--black_light;
      border: 1px solid rgba($color--grey, 0.6);
      box-shadow: none;

      &:hover {
        background: darken($color--grey_light, 5%);
      }
    }
  }
}
